{
    "name": "vite-tpl",
    "version": "0.1.0",
    "description": "vite tpl",
    "main": "index.js",
    "scripts": {
        "dev": "vite --debug --open",
        "serve": "pnpm dev",
        "build": "vite build",
        "preview": "vite preview",
        "preview:build": "pnpm build && vite preview",
        "lint": "pnpm lint:eslint && pnpm lint:stylelint",
        "lint:eslint": "eslint \"src/**/*.{vue,ts,js}\" --fix",
        "lint:stylelint": "stylelint \"src/**/*.{vue,html,css,less,scss,sass}\" --fix",
        "preinstall": "npx only-allow pnpm",
        "prepare": "husky install"
    },
    "keywords": [
        "vite",
        "vue"
    ],
    "author": "zhaoqing",
    "license": "MIT",
    "dependencies": {
        "@vueuse/components": "^8.9.2",
        "@vueuse/core": "^7.7.1",
        "axios": "^0.25.0",
        "element-plus": "^2.2.9",
        "pinia": "^2.0.16",
        "qs": "^6.11.0",
        "vue": "^3.2.37",
        "vue-router": "^4.1.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^16.3.0",
        "@commitlint/config-conventional": "^16.2.4",
        "@rollup/plugin-strip": "^2.1.0",
        "@rushstack/eslint-patch": "^1.1.4",
        "@trscd/eslint-config": "^0.1.4",
        "@trscd/stylelint-config-tpconfig": "^1.1.3",
        "@types/lodash-es": "^4.17.6",
        "@types/node": "^17.0.45",
        "@types/qs": "^6.9.7",
        "@typescript-eslint/parser": "^5.30.6",
        "@unocss/transformer-directives": "^0.39.3",
        "@vitejs/plugin-vue": "^2.3.3",
        "@vue/compiler-sfc": "^3.2.37",
        "@vue/eslint-config-typescript": "^10.0.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.19.0",
        "eslint-plugin-vue": "^8.7.1",
        "husky": "^7.0.4",
        "less": "^4.1.3",
        "lint-staged": "^12.5.0",
        "postcss": "^8.4.14",
        "rollup": "^2.76.0",
        "stylelint": "^14.9.1",
        "typescript": "^4.7.4",
        "unocss": "^0.39.3",
        "unplugin-auto-import": "^0.6.9",
        "unplugin-icons": "^0.13.4",
        "unplugin-vue-components": "^0.17.21",
        "vite": "^2.9.14"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog",
            "disableScopeLowerCase": true
        }
    },
    "lint-staged": {
        "*.{js,ts,vue}": "pnpm lint:eslint",
        "*.{vue,html,css,less,scss,sass}": "pnpm lint:stylelint"
    }
}
